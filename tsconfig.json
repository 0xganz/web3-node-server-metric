{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["es2015", "dom"],
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node"],
      "stripInternal": false,
      "incremental": true,
      "skipLibCheck": true,
      "importsNotUsedAsValues": "error",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ],
    "typedocOptions": {
      "entryPoints": ["./src/index.ts"],
      "readme": "none",
    }
}